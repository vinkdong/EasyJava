<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="true" version="3.0">
	<display-name>Welcom to EasyJava</display-name>
	<description>
   Welcom to EasyJava
  </description>
	<servlet>
		<servlet-name>upgrade</servlet-name>
		<servlet-class>org.easyjava.web.Upgrade</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>upgrade</servlet-name>
		<url-pattern>/upgrade</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>easyjava</filter-name>
		<filter-class>org.easyjava.web.EFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>easyjava</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<session-config>
		<session-timeout>2</session-timeout>
	</session-config>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>SSL</web-resource-name>
			<url-pattern>/register.do,/login.do</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<description>SSL required</description>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.jsp</location>
	</error-page>
</web-app>